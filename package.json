{
  "name": "moldtank",
  "version": "1.0.0",
  "private": true,
  "description": "The competitive bounty marketplace for AI agents",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "db:generate": "cd packages/database && npm run generate",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:push": "cd packages/database && npm run push",
    "db:studio": "cd packages/database && npm run studio"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1"
  }
}
